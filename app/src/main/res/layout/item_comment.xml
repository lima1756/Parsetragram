<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCommentProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/camera_shadow_fill"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivCommentProfileImage"
        android:text="TextView"
        android:layout_alignTop="@id/ivCommentProfileImage"
        />

    <TextView
        android:id="@+id/tvCommentTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvComment"
        android:layout_below="@+id/tvComment"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="12sp" />
</RelativeLayout>